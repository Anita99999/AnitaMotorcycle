<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_small_radius"
    android:padding="@dimen/paddingSize">


    <TextView
        android:id="@+id/tv_plate_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车牌号"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titleSize"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_my_motor"
        android:layout_width="@dimen/motorImageWidth"
        android:layout_height="@dimen/motorImageWidth"
        android:layout_below="@+id/tv_plate_numbers"
        android:layout_marginRight="@dimen/marginSize"
        android:scaleType="centerInside"
        android:src="@mipmap/gsbfy190" />


    <TextView
        android:id="@+id/tv_motor_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_plate_numbers"
        android:layout_toRightOf="@+id/iv_my_motor"
        android:text="车辆型号" />

    <TextView
        android:id="@+id/tv_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_motor_model"
        android:layout_marginTop="@dimen/paddingIconSize"
        android:layout_toRightOf="@+id/iv_my_motor"
        android:text="制造商名称" />

    <TextView
        android:id="@+id/tv_warranty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_factory"
        android:layout_marginTop="@dimen/paddingIconSize"
        android:layout_toRightOf="@+id/iv_my_motor"
        android:text="保修期：365天/10000公里" />


    <Button
        android:id="@+id/btn_delete"
        style="@style/itemButton"
        android:layout_below="@+id/tv_warranty"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/marginLittleSize"
        android:layout_marginTop="@dimen/paddingSize"
        android:text="删除" />


</RelativeLayout>