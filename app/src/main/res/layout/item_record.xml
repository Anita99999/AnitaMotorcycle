<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_small_radius"
    android:padding="@dimen/paddingIconSize">

    <ImageView
        android:id="@+id/iv_chepaihao"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:src="@mipmap/chepaihao" />

    <TextView
        android:id="@+id/tv_motor_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingSize"
        android:layout_toRightOf="@+id/iv_chepaihao"
        android:text="车牌号"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titleSize"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_repair_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修状态"
            android:textColor="#005EFF"
            android:textSize="@dimen/itemSize" />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/navBarIconSize"
            android:layout_height="@dimen/navBarIconSize"
            android:padding="@dimen/paddingBigSize"
            android:layout_gravity="right"
            android:src="@mipmap/go" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_motor_type"
        android:layout_marginTop="@dimen/marginLittleSize"
        android:text="状态更新时间:" />

    <TextView
        android:id="@+id/tv_update_time_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_motor_type"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginTop="@dimen/marginLittleSize"
        android:layout_toRightOf="@id/tv_update_time"
        android:text="更新时间" />

    <TextView
        android:id="@+id/tv_factory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_update_time"
        android:layout_marginTop="@dimen/marginLittleSize"
        android:text="维修商:" />

    <TextView
        android:id="@+id/tv_factory_name_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_update_time"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/marginLittleSize"
        android:layout_toRightOf="@id/tv_factory_name"
        android:text="商家名称" />

    <TextView
        android:id="@+id/tv_trouble_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_factory_name"
        android:layout_marginTop="@dimen/marginLittleSize"
        android:text="故障类型:" />

    <TextView
        android:id="@+id/tv_trouble_type_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_factory_name"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginTop="@dimen/marginLittleSize"
        android:layout_toRightOf="@id/tv_trouble_type"
        android:text="故障类型" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/itemButton"
        android:layout_below="@+id/tv_trouble_type"
        android:layout_alignParentRight="true"
        android:text="确认取车" />

    <Button
        android:id="@+id/btn_evaluate"
        style="@style/itemButton"
        android:layout_below="@+id/tv_trouble_type"
        android:layout_marginRight="@dimen/marginLittleSize"
        android:layout_toLeftOf="@+id/btn_confirm"
        android:text="评价" />


</RelativeLayout>