<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RepairApplicationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navBarHeight"
        android:background="@color/mainColor"
        android:paddingLeft="@dimen/marginSize"
        android:paddingRight="@dimen/marginSize">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/navBarIconSize"
            android:layout_height="@dimen/navBarIconSize"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/paddingIconSize"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="维修申请"
            android:textColor="@android:color/white"
            android:textSize="@dimen/navBarTitleSize" />

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/paddingIconSize"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/navBarTitleSize" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginSize"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textViewHeight"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="申请人姓名" />

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:background="@drawable/shape_et"
                        android:inputType="text"
                        android:paddingLeft="@dimen/marginLittleSize"
                        android:textSize="@dimen/itemSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textViewHeight"
                    android:layout_marginTop="@dimen/marginSize"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="手机号" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:background="@drawable/shape_et"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="@dimen/marginLittleSize"
                        android:textSize="@dimen/itemSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textViewHeight"
                    android:layout_marginTop="@dimen/marginSize"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="车牌号" />

                    <Spinner
                        android:id="@+id/sp_motors_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:background="@drawable/shape_et" />
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/itemHeight"-->
                <!--android:layout_marginTop="@dimen/marginLittleSize"-->
                <!--android:orientation="horizontal">-->

                <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="4"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="维修时间" />-->

                <!--<Button-->
                <!--android:id="@+id/btn_time"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="15"-->
                <!--android:background="@drawable/shape_et"-->
                <!--android:gravity="center_vertical|left"-->
                <!--android:paddingLeft="@dimen/marginLittleSize"-->
                <!--android:text="请选择日期" />-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textViewHeight"
                    android:layout_marginTop="@dimen/marginSize"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="车辆定位" />

                    <EditText
                        android:id="@+id/et_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:background="@drawable/shape_et"
                        android:inputType="text"
                        android:paddingLeft="@dimen/marginLittleSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textViewHeight"
                    android:layout_marginTop="@dimen/marginSize"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="故障类型" />

                    <Spinner
                        android:id="@+id/sp_problems_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:background="@drawable/shape_et" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginSize"
                    android:gravity="center_vertical"
                    android:text="故障描述" />

                <EditText
                    android:id="@+id/et_problems"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/maxTextViewHeight"
                    android:layout_marginTop="@dimen/paddingIconSize"
                    android:background="@drawable/shape_et"
                    android:gravity="top"
                    android:hint="请描述故障问题"
                    android:inputType="text"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/marginLittleSize"
                    android:paddingTop="@dimen/paddingIconSize"
                    android:textSize="@dimen/itemSize" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>