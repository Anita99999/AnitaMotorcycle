<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities2.Login2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/navBarIconSize"
            android:layout_height="@dimen/navBarIconSize"
            android:layout_marginLeft="@dimen/paddingIconSize"
            android:layout_marginTop="@dimen/marginSize"
            android:padding="@dimen/paddingBigSize"
            android:src="@mipmap/back_black" />

        <ImageView
            android:layout_width="106dp"
            android:layout_height="76dp"
            android:layout_marginLeft="@dimen/marginSize"
            android:layout_marginTop="@dimen/marginBigSize"
            android:scaleType="centerInside"
            android:src="@mipmap/welcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="20dp"
            android:text="维修员入口"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navBarTitleSize" />

        <com.anita.anitamotorcycle.views.InputView
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputViewHeight"
            android:layout_marginTop="@dimen/marginSize"
            android:maxLength="11"
            app:input_hint="请输入手机号"
            app:input_icon="@mipmap/phone"
            app:is_password="false"></com.anita.anitamotorcycle.views.InputView>

        <com.anita.anitamotorcycle.views.InputView
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputViewHeight"
            android:layout_marginTop="@dimen/marginLittleSize"
            android:layout_marginBottom="@dimen/marginSize"
            app:input_hint="请输入密码"
            app:input_icon="@mipmap/password"
            app:is_password="true"></com.anita.anitamotorcycle.views.InputView>

        <Button
            android:id="@+id/btn_login"
            style="@style/commitButton"
            android:text="登  录" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:layout_marginRight="@dimen/marginSize">

            <TextView
                android:id="@+id/tv_forgetPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="#005EFF"
                android:textSize="@dimen/infoSize" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="用户注册"
                android:textColor="#005EFF"
                android:textSize="@dimen/infoSize" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/marginSize"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即代表阅读并同意" />

        <TextView
            android:id="@+id/tv_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务条款"
            android:textColor="#005EFF" />
    </LinearLayout>


</RelativeLayout>