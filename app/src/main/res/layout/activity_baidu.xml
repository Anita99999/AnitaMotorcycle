<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BaiduActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/fl_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginLittleSize"
        android:gravity="center_vertical"
        android:background="@color/itemViewColor1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/navBarIconSize"
            android:layout_height="@dimen/navBarIconSize"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/paddingBigSize"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_back"
            android:text="定位"
            android:layout_marginLeft="@dimen/paddingLittleSize"
            android:textStyle="bold"
            android:textSize="@dimen/titleSize" />

        <ImageView
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/paddingLittleSize"
            android:src="@mipmap/location" />

    </LinearLayout>


</RelativeLayout>