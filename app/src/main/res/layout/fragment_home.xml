<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fl_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navBarHeight"
        android:background="@color/mainColor"
        android:paddingLeft="@dimen/marginSize"
        android:paddingRight="@dimen/marginSize">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="摩托车管家"
            android:textColor="@android:color/white"
            android:textSize="@dimen/navBarTitleSize" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_nav"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginTop="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginLittleSize"
            android:paddingTop="@dimen/paddingIconSize"
            android:paddingBottom="@dimen/paddingIconSize"
            android:text="定位"
            android:textColor="@color/smssdk_black"
            android:textSize="@dimen/titleSize" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_toRightOf="@+id/tv_location"
            android:padding="@dimen/paddingSize"
            android:src="@mipmap/location" />


        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_change"
            android:padding="@dimen/paddingIconSize"
            android:text="切换"
            android:textColor="@color/smssdk_black"
            android:textSize="@dimen/titleSize" />

        <ImageView
            android:id="@+id/iv_change"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/paddingIconSize"
            android:paddingRight="@dimen/paddingIconSize"
            android:paddingBottom="@dimen/paddingIconSize"
            android:src="@mipmap/change_motor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_below="@+id/rl_button"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize"
        android:background="@drawable/shape_radius"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_bind_motor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/paddingIconSize"
            android:text="点击绑定我的摩托车"
            android:textSize="@dimen/titleSize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayout_motor_basic_info"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_below="@+id/rl_button"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize"
        android:background="@drawable/shape_radius">

        <ImageView
            android:id="@+id/iv_motor"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@mipmap/XS_WH125T_7" />

        <LinearLayout
            android:id="@+id/ll_warranty_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_motor"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保修期："
                android:textSize="@dimen/itemSize" />
            <TextView
                android:id="@+id/tv_warranty_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="365天"
                android:textSize="@dimen/itemSize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或"
                android:textSize="@dimen/itemSize" />
            <TextView
                android:id="@+id/tv_warranty_journey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000公里"
                android:textSize="@dimen/itemSize" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_below="@+id/ll_warranty_period"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/marginLittleSize"
            android:layout_marginRight="@dimen/marginLittleSize"
            android:background="@drawable/shape_radius"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/marginLittleSize"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/paddingSize"
                    android:text="迅鲨WH125T-7"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="车辆型号"
                    android:textSize="@dimen/infoSize" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/marginLittleSize"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/paddingSize"
                    android:text="2017年"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="生产年份"
                    android:textSize="@dimen/infoSize" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/marginLittleSize"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/paddingSize"
                    android:text="踏板车"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="车辆类型"
                    android:textSize="@dimen/infoSize" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relayout_motor_basic_info"
        android:layout_margin="@dimen/marginSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="22dp"
            android:background="@color/mainColorH" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingSize"
            android:text="售后服务"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/usernameSize"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize"
        android:background="@drawable/shape_radius"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marginSize"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/paddingIconSize"
                android:scaleType="centerInside"
                android:src="@mipmap/maintain_default" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/paddingSize"
                android:text="维修服务"
                android:textColor="@android:color/black"
                android:textSize="@dimen/titleSize" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>